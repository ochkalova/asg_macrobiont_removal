params {
    input_accession = "ERZ19489113"
    input_fasta = "data/matagenome.fasta.gz"

    blast_reference_genomes_folder = "data"
    host_reference_genome = "combined_haplotype_genome.fa"
    params.remove_human_phix = false

}

singularity {
    enabled = true
    autoMounts = true
    cacheDir = "/hps/nobackup/rdf/metagenomics/service-team/singularity-cache/"
}

profiles {

    slurm {
            includeConfig "configs/slurm.config"
            process.executor = "slurm"
        }
    
    test_local { 
            includeConfig 'configs/test_local.config'
        }
}

includeConfig 'configs/modules.config'
